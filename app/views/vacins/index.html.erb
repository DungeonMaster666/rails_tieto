<h1 class="text-center">COVID19 vakcinācija Latvijā</h1>
<br/>
<br/>

<div class="container-fluid bg-light">
  <div class="col-md-12 text-center">
    <div class="row">
      <div class="col">
        <%= link_to 'Pievienot Ierakstu', new_vacin_path, class: "btn btn-secondary" %>
      </div>
      <div class="col">
        <div class="container pagination justify-content-center" >
          <%= paginate @vacins %>
        </div>
      </div>
      <div class="col">
      </div>
    </div>


  </div>
</div>



<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Vakcinācijas iestādes kods</th>
    <th>Vakcinācijas iestādes nosaukums</th>
    <th>Vakcinācijas datums YYYY-MM-DD</th>
    <th>Vakcīnas veids</th>
    <th>Preparāts</th>
    <th>Vakcinācijas posms</th>
    <th>Vakcīnas kārtas numurs</th>
    <th>Preparāta daudzums ml</th>
    <th>Vakcīnas ievadīšanas veids</th>
    <th>Indikācijas vakcinācijai</th>
    <th>Vakcinētās personas vecums</th>
    <th>Vakcinētās personas dzimums</th>
    <th>Vakcinēto personu skaits</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @vacins.each do |vacin| %>
    <tr>
      <td><%= vacin.iestade_id %></td>
      <td><%= vacin.iest_nos %></td>
      <td><%= vacin.vacin_date %></td>
      <td><%= vacin.vacin_type %></td>
      <td><%= vacin.preparat %></td>
      <td><%= vacin.vacin_posms %></td>
      <td><%= vacin.vacin_kartas_num %></td>
      <td><%= vacin.prep_daudz %></td>
      <td><%= vacin.vakcin_ievade %></td>
      <td><%= vacin.indik_vakcin %></td>
      <td><%= vacin.pers_age %></td>
      <td><%= vacin.pers_dzimums %></td>
      <td><%= vacin.pers_skaits %></td>

      <td><%= link_to 'Radīt', vacin , class: "btn btn-secondary"%></td>
      <% if vacin.user == current_user %>
        <td><%= link_to 'Mainīt', edit_vacin_path(vacin), class: "btn btn-info" %></td>
        <td><%= link_to 'Dzēst', vacin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      <% else %>
        <td></td>
        <td></td>
      <%end %>
    </tr>
  <% end %>
  </tbody>
</table>

